{% extends 'base.html.twig' %}

{% block body %}
    <h1>Options list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Duration</th>
                <th>Status</th>
                <th>Createat</th>
                <th>Updateat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td><a href="{{ path('options_show', { 'id': option.id }) }}">{{ option.id }}</a></td>
                <td>{{ option.name }}</td>
                <td>{{ option.photo }}</td>
                <td>{% if option.duration %}{{ option.duration|date('H:i:s') }}{% endif %}</td>
                <td>{{ option.status }}</td>
                <td>{% if option.createAt %}{{ option.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if option.updateAt %}{{ option.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('options_show', { 'id': option.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('options_edit', { 'id': option.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('options_new') }}">Create a new option</a>
        </li>
    </ul>
{% endblock %}
